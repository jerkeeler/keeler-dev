---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Keeler â€” adventurer, developer, a drop of the world." />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="theme-color" content="#24d1f8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Keeler - {title}</title>
  </head>

  <body>
    <div class="flex justify-center min-h-screen text-gray-800">
      <div class="w-full max-w-screen-lg flex-grow flex flex-col md:flex-row-reverse p-4">
        <Navbar />
        <div class="flex-grow overflow-auto md:mr-40">
          <main><slot /></main>
          <Footer />
        </div>
      </div>
    </div>

    <!-- 100% privacy-first analytics -->
    <script async defer src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
    <noscript>
      <img src="https://queue.simpleanalyticscdn.com/noscript.gif" alt="" referrerpolicy="no-referrer-when-downgrade" />
    </noscript>
  </body>
</html>
