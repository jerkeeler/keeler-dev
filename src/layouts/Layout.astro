---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}
const { title, description = "Keeler's slice of the universe. Thoughts, ramblings, and experiments abound." } =
  Astro.props;
const fullTitle = `Keeler - ${title}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />

    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="theme-color" content="#24d1f8" />

    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/minimal_j.svg" />
    <meta property="og:image:type" content="image/svg" />
    <meta property="og:image:alt" content="Minimalistic geometric light blue J" />

    <link rel="apple-touch-icon" href="/minimal_j.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body>
    <div class="flex justify-center min-h-screen text-gray-800">
      <div class="w-full max-w-screen-lg flex-grow flex flex-col md:flex-row-reverse p-4">
        <Navbar />
        <div class="flex-grow overflow-auto md:mr-40">
          <main><slot /></main>
          <Footer />
        </div>
      </div>
    </div>

    <!-- 100% privacy-first analytics -->
    <script async defer src="https://simple.keeler.dev/latest.js" data-collect-dnt="true"></script>
    <noscript>
      <img src="https://simple.keeler.dev/noscript.gif" alt="" referrerpolicy="no-referrer-when-downgrade" />
    </noscript>
  </body>
</html>
